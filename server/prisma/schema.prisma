generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game{
  id Int @id @default(autoincrement())
  title String
  description String
  image String @default("default.png")
  price Float
  stock Int
  sellerID Int
  genre String
  
  seller User @relation(fields: [sellerID], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  itemsSold OrderItem[]
  itemsCart CartItem[]
}

model User{
  id Int @id @default(autoincrement())
  CPF String? @unique
  name String?
  phone String?
  image String @default("uploads/games/default.png")
  password String
  email String @unique
  role String @default("user")
  isDeleted  Boolean @default(false)
  
  addresses Address[] @relation("UserAddresses")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  gamesSold Game[]
  orders Order[]
  cart Cart?
}

model Address{
  id Int @id @default(autoincrement())
  userID Int
  label String?
  street String
  number String
  complemento String
  neighborhood String
  city String
  state String
  zipCode String
  isDefaultShipping Boolean @default(false)
  
  user User @relation("UserAddresses", fields: [userID], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  orders Order[]
  carts Cart[]
}

model Order{
  id Int @id @default(autoincrement())
  userID Int
  status String
  total Float
  subtotal Float
  discount Float
  tax Float
  shippingCost Float
  shippingAddressID Int
  shippingMethod String
  paymentMethod String
  paymentStatus String
  
  user User @relation(fields: [userID], references: [id])
  address Address @relation(fields: [shippingAddressID], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  items OrderItem[]
}

model OrderItem{
	id Int @id @default(autoincrement())
	orderID Int
	gameID Int
	quantity Int
	unitPrice Float
	
	order Order @relation(fields: [orderID], references: [id])
	game Game @relation(fields: [gameID], references: [id])
}

model Cart{
  id Int @id @default(autoincrement())
  userID Int @unique
  total Float
  subtotal Float
  discount Float
  tax Float
  shippingCost Float
  couponCode String?
  shippingAddressID Int?
  shippingMethod String?
  
  user User @relation(fields: [userID], references: [id])
  address Address? @relation(fields: [shippingAddressID], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  items CartItem[]
}

model CartItem{
	id Int @id @default(autoincrement())
	cartID Int
	gameID Int
	quantity Int
	unitPrice Float
	
	cart Cart @relation(fields: [cartID], references: [id])
	game Game @relation(fields: [gameID], references: [id])
}